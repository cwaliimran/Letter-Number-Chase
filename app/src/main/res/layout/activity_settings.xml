<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:onClick="onSettingsButtonClick"
        android:src="@drawable/back_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                android:orientation="vertical"
                app:cardUseCompatPadding="true">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioOption1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Match Similar" />

                    <RadioButton
                        android:id="@+id/radioOption2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Match Next" />

                    <RadioButton
                        android:id="@+id/radioOption3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Match Previous" />
                </RadioGroup>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                android:orientation="vertical"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewLetter"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/baseline_abc_24"
                            app:tint="@color/black" />

                        <TextView
                            style="@style/SubHeadingStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:outlineProvider="none"
                            android:padding="0dp"
                            android:text="Range"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewLetterRange"
                        style="@style/SubHeadingStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="A - Z"
                        android:textColor="@color/highlightColor" />

                    <SeekBar
                        android:id="@+id/seekBarLetter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:max="25"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:progress="25"
                        android:progressDrawable="@drawable/seekbar_track"
                        android:thumb="@drawable/seekbar_thumb_letter" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:orientation="vertical"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/baseline_123_24"
                            app:tint="@color/black" />

                        <TextView
                            style="@style/SubHeadingStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:outlineProvider="none"
                            android:padding="0dp"
                            android:text="Range"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewNumberRange"
                        style="@style/SubHeadingStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0 - 100"
                        android:textColor="@color/highlightColor" />

                    <!--
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="1">

                                        <androidx.appcompat.widget.AppCompatButton
                                            android:id="@+id/add1"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.2"
                                            android:text="1" />

                                        <SeekBar
                                            android:id="@+id/seekBarNumber"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:layout_weight="0.6"
                                            android:max="5000"
                                            android:paddingStart="20dp"
                                            android:paddingEnd="20dp"
                                            android:progress="100"
                                            android:progressDrawable="@drawable/seekbar_track"
                                            android:thumb="@drawable/seekbar_thumb_letter" />

                                        <androidx.appcompat.widget.AppCompatButton
                                            android:id="@+id/minus1"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.2"
                                            android:text="+1" />

                                    </LinearLayout>
                    -->

                    <SeekBar
                        android:id="@+id/seekBarNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:max="5000"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:progress="100"
                        android:progressDrawable="@drawable/seekbar_track"
                        android:thumb="@drawable/seekbar_thumb_letter" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/count10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/count50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/count100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:orientation="vertical"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:src="@drawable/baseline_format_list_numbered_24"
                            app:tint="@color/black" />

                        <TextView
                            style="@style/SubHeadingStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:outlineProvider="none"
                            android:padding="0dp"
                            android:text="Multiple-Choice Options"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewOptionsRange"
                        style="@style/SubHeadingStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="4"
                        android:textColor="@color/highlightColor" />

                    <SeekBar
                        android:id="@+id/seekBarOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:max="11"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:progress="4"
                        android:progressDrawable="@drawable/seekbar_track"
                        android:thumb="@drawable/seekbar_thumb_letter" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnResetSettings"
                style="@style/button_with_text"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="60dp"
                android:text="Reset Settings"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>